<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Disfigure.GUI.Client.ViewModels;assembly=Disfigure.GUI.Client"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Disfigure.GUI.Client.Views.MessageBox">

    <Design.DataContext>
        <vm:MessageBoxViewModel />
    </Design.DataContext>

    <UserControl.KeyBindings>
        <KeyBinding Command="{Binding FlushContent}" Gesture="Enter" />
    </UserControl.KeyBindings>

    <TextBox HorizontalAlignment="Stretch" Background="Transparent" Text="{Binding Content}" />
</UserControl>