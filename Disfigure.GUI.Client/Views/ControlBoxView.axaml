<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Disfigure.GUI.Client.Views.ControlBoxView">

    <UserControl.KeyBindings>
        <KeyBinding Command="{Binding FlushContent}" Gesture="Enter" />
    </UserControl.KeyBindings>

    <Border BorderBrush="{DynamicResource ThemeHighlight}" BorderThickness="2">
        <DockPanel>
            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5, 0, 10, 0" Text=":>" />
            <TextBox DockPanel.Dock="Left" HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderThickness="0" Text="{Binding Content}" />
        </DockPanel>
    </Border>
</UserControl>