<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Disfigure.GUI.Client.Views.MessageView">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Border BorderBrush="Red" BorderThickness="3">
                <TextBlock VerticalAlignment="Center" Margin="0, 0, 15, 0" Text="{Binding Sender}" />
            </Border>
            <Border BorderBrush="Red" BorderThickness="3">
                <TextBlock VerticalAlignment="Center" FontSize="14" Text="{Binding UtcTimestampString}" />
            </Border>
        </StackPanel>

        <TextBlock Text="{Binding Contents}" />
    </StackPanel>
</UserControl>